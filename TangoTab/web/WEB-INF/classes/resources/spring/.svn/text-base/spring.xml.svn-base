<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop.xsd">
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
 
		<property name="location">
			<value>tangotab.properties</value>
		</property>
	</bean>
    <bean id="dataSource"
          class="org.apache.commons.dbcp.BasicDataSource">

        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>

        <!--<property name="databasePassword" value="@DATABASE_ENCRYPTED_PASSWORD@"/>-->
        <!--<property name="suppressClose" value="true"/>-->
    </bean>
    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate3.LocalSessionFactoryBean" autowire="default">
        <property name="mappingDirectoryLocations">
            <list>
                <value>classpath:/com/tangotab/dao/pojo</value>
            </list>
        </property>
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="c3p0.min_size">1</prop>
                <prop key="c3p0.max_size">50</prop>
                <prop key="c3p0.timeout">1800</prop>
                <prop key="c3p0.max_statements">50</prop>
                <prop key="c3p0.idle_test_period">100</prop>
                <prop key="show_sql">true</prop>
                <!-- <prop key="connection.pool_size">50</prop>-->
                <prop key="format_sql">false</prop>
                <prop key="cache.use_minimal_puts">true</prop>
                <prop key="connection.isolation">1</prop>
                <prop key="connection.release_mode">auto</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="performanceMonitor" class="com.tangotab.spring.TGPerformanceInterceptor">
    </bean>


    <bean id="com.tangotab.business.UserBO"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="proxyInterfaces" value="com.tangotab.business.UserBO"/>
        <property name="transactionManager">
            <ref local="transactionManager"/>
        </property>
        <property name="target">
            <bean class="com.tangotab.businessImpl.UserBOImpl"/>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
        <property name="preInterceptors">
            <list>
                <ref bean="performanceMonitor"/>
            </list>
        </property>
    </bean>

